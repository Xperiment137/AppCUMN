<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:background="@drawable/pain_forest"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_vertical"
android:orientation="vertical"
tools:context=".PhotoUpload">
<!--tools:context=""-->
    <TextView
        android:id="@+id/texto"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:text="Elije una caracteristica:"
        android:textColor="#4CAF50"
        android:textSize="25sp" /><!--red color for text view-->
      <ImageView
        android:id="@+id/visor"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />
        />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/flor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0DD650"
            android:layout_marginTop="20dp"
            android:backgroundTint="#139718"
            android:text="Flor"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#0DD650"
            android:backgroundTint="#139718"
            android:text="Hoja"
            android:textColor="#000000" />

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/corteza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#0DD650"
        android:backgroundTint="#139718"
        android:text="Corteza"
        android:textColor="#000000" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fruto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#0DD650"
        android:backgroundTint="#139718"
        android:text="Fruto"
        android:textColor="#000000" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#0DD650"
        android:backgroundTint="#139718"
        android:text="Volver al inicio"
        android:textColor="#000000" />

</LinearLayout>